@model IEnumerable<Application.ViewModel.ExameViewModel>

@{ ViewData["Title"] = "Index"; }


<p>
    <a class="btn" style="background-color: #ffce64;" asp-action="Create">Novo Exame</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>
               Nome do exame
            </th>
            <th>
                Observação
            </th>
            <th>
                Tipo do exame
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeDoExame)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDeExame.NomeDoTipo)
                </td>
                <td>
                    <a asp-action="Edit" style="width:30px" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" style="width:30px" asp-route-id="@item.Id">delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>