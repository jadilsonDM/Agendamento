@model Application.InputModel.TipoDeExameInputModel

@{ ViewData["Title"] = "Edit"; }

<h1>Editar tipo de exame</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Nome</label>
                <input asp-for="NomeDoTipo" class="form-control" maxlength="100" />
                <span asp-validation-for="NomeDoTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" maxlength="256" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" asp-controller="TipoExame" class="btn btn-outline-secondary">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
