@model Application.InputModel.TipoDeExameInputModel
@{
}
<div class="row">
    <div class="col-md-6 d-none d-md-block" style="height: 450px;">
        <div class="text-center col-md-12 my-auto side-heder">
            <h1>Tipos de exames</h1>
            <img src="~/TipoExame.png" width="540" height="350" />
        </div>
    </div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Nome</label>
                <input asp-for="NomeDoTipo" class="form-control"/>
                <span asp-validation-for="NomeDoTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control"  />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                
            </div>
            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-controller="TipoExame" asp-action="Index">Voltar</a>

                <input type="submit" value="Salvar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>