@model Application.InputModel.TipoDeExameInputModel
@{
}
<div class="row">
    <div class="col-md-6 d-none d-md-block" style="height: 450px;">
        <div class="text-center col-md-12 my-auto side-heder">
            <h1>Cadastro de Usuário</h1>
            <img src="~/registerImage.png" />
        </div>
    </div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeDoTipo" class="control-label"></label>
                <input asp-for="NomeDoTipo" class="form-control" maxlength="100" />
                <span asp-validation-for="NomeDoTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" maxlength="14" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-controller="Usuarios" asp-action="Index">Voltar</a>

                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>